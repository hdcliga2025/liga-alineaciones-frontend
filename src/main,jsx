// src/main.jsx
import { h, render } from "preact";
import App from "./App.jsx";

// Montaje simple (sin StrictMode para evitar dobles efectos en hooks)
// Si quieres habilitarlo, importa { StrictMode } desde 'preact/compat' y envuelve <App />
const mount = document.getElementById("app");

if (mount) {
  render(<App />, mount);
} else {
  // Fallback por si el nodo no existe aún
  const el = document.createElement("div");
  el.id = "app";
  document.body.appendChild(el);
  render(<App />, el);
}

// Opcional: evita restauración de scroll rara en móvil entre rutas
try { if ("scrollRestoration" in history) history.scrollRestoration = "manual"; } catch {}
