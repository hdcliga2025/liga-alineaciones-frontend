.form {
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
  width: 100%;
  max-width: 350px;
}

label {
  font-weight: 600;
  color: #333;
  font-family: "Montserrat", sans-serif;
}

input {
  padding: 0.6rem;
  border: 1px solid #ccc;
  border-radius: 6px;
  font-family: "Montserrat", sans-serif;
}

.btn-primary {
  background: #00aaff;
  color: white;
  font-weight: 600;
  padding: 0.8rem;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  margin-top: 0.5rem;
  transition: background 0.2s ease;
}

.btn-primary:hover {
  background: #0088cc;
}
